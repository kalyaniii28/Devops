pipeline {
    agent {
        docker {
            image 'python:3.9'  // This pulls the official Python 3.9 Docker image
            label 'python-3.9-agent' // You can specify a label if needed
        }

    stages {
        stage('Test') {
            steps {
                sh 'python3 add.py'  // Use python3 to ensure Python 3.9 is used
            }
        }
    }
}
}