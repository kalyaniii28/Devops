pipeline {
    agent {
        docker 'python:3.9'  // Use the official Python Docker image
    }
    stages {
        // Stage to checkout the Git repository containing the script
        stage('Checkout') {
            steps {
                checkout scm  // Pull the repository
            }
        }

        // Stage to run the Python script
        stage('Run python function') {
            steps {
                sh 'python add.py'  // Run the Python script
            }
        }
    }
    post {
        success {
            echo "Build successful"
        }
        failure {
            echo "Build failed"
        }
    }
}
