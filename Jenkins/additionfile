pipeline {
    agent {
        docker 'python:3.9'
    }
    environment {
        NUM1 = '5'  // Set the first number
        NUM2 = '7'  // Set the second number
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm  // Pull the repository
            }
        }

        stage('Run python function') {
            steps {
                sh 'python add.py'  // Run the Python script
            }
        }
    }
    post {
        success {
            echo "Build successful"
        }
        failure {
            echo "Build failed"
        }
    }
}
